@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>

    #headerDiv {
        color: blue;
        text-align: center;
    }

    #theImage {
        max-width: 300px;
    }
</style>

<div id="headerDiv"><h2>Image Classification</h2></div>
<br />
<div>
    <form method="post" enctype="multipart/form-data">
        <div>
            <p>Upload a file image using this form to predict its label:</p>
        </div>
        <div>
            <input type="file" id="imgFile" name="imageFile" onchange="preview_image(event)">
            <img id="theImage" src="#" alt="image" />
        </div>
        <div>
            <br />
            <input type="submit" value="Upload & Check File" name="submit">
        </div>

    </form>
</div>
<br />
<br />

<div id="divPrediction" class="col-md-10"></div>
<div id="divProbability" class="col-md-10"></div>

